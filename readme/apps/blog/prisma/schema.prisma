// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output = "../../../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id             Int @id @default(autoincrement())
  status         Status[]
  comments       Comment[]
  videoPosts     Video_Post[]
  textPosts      Text_Post[]
  photoPosts     Photo_Post[]
  linkPosts      Link_Post[]
}

model Video_Post {
 id             Int @id @default(autoincrement())
 post           Post @relation(fields: [postId], references: [id])
 title          String
 link           String
 tags           String
 createdAt      DateTime @default(now())
 publishAt      DateTime @default(now())
 userId         String
 postId         Int
}

model Text_Post {
 id             Int @id @default(autoincrement())
 post           Post @relation(fields: [postId], references: [id])
 title          String
 announceText   String
 text           String
 tags           String
 createdAt      DateTime @default(now())
 publishAt      DateTime @default(now())
 userId         String
 postId         Int
}

model Photo_Post {
 id             Int @id @default(autoincrement())
 post           Post @relation(fields: [postId], references: [id])
 photo          String
 tags           String
 createdAt      DateTime @default(now())
 publishAt      DateTime @default(now())
 userId         String
 postId         Int
}

model Link_Post {
 id             Int @id @default(autoincrement())
 post           Post @relation(fields: [postId], references: [id])
 link           String
 description    String
 tags           String
 createdAt      DateTime @default(now())
 publishAt      DateTime @default(now())
 userId         String
 postId         Int
}

model Status {
  id           Int @id @default(autoincrement())
  title        String
  posts        Post[]
}

model Comment {
  id          Int @id @default(autoincrement())
  createdAt   DateTime @default(now())
  text        String
  userId      String
  postId      Int
  post        Post @relation(fields: [postId], references: [id])
}

